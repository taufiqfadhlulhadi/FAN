<Window x:Class="FAN_Apps.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FAN_Apps"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel x:Name="stack">
            <TextBlock Text="Add Row" Margin="10, 0, 0, 0" MouseLeftButtonDown="TextBlock_MouseLeftButtonDown"/>
            <TextBlock Text="Add Column" Margin="10.334,0,-0.334,0" Grid.Column="2" MouseLeftButtonDown="TextBlock_MouseLeftButtonDown_1"/>
            <!--<Button Width="50" Height="15" HorizontalAlignment="Left" Click="Button_Click"/>-->
            
            <Grid HorizontalAlignment="Left">
                <StackPanel x:Name="stack_vertical" HorizontalAlignment="Left">
                    <StackPanel Orientation="Horizontal" x:Name="stack_horizontal">

                    </StackPanel>
                                
                </StackPanel>
            </Grid>

        </StackPanel>

    </Grid>
</Window>
